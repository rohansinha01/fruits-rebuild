<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs") %>
  <body>
    <%- include("../partials/header.ejs") %>

    <main>
      <div>
        <% for(let fruit of fruits){ %>

        <article>
          <a href="/fruits/<%= fruit._id %>">
            <h2>
              <%= fruit.name %> - <%= fruit.readyToEat ? "Ripe" : "Not Ripe" %>
            </h2>
          </a>
        </article>

        <% } %>
      </div>
    </main>
    <a href="/fruits/new"><button>Create a Fruit</button></a>
  </body>
</html>